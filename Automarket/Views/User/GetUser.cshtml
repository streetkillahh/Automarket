@using Automarket.Domain.Enum
@using Automarket.Domain.Extensions
@model Automarket.Domain.ViewModels.User.UserViewModel

<form>
    <div class="row">
        <div class="form-group col-md-2">
            <label asp-for="@Model.Id" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Id" readonly>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Role" class="col-form-label"></label>
            <select class="form-control" id="selectRoleId">
                <option value="@Role.User">@Role.User.GetDisplayName()</option>
                <option value="@Role.Moderator">@Role.Moderator.GetDisplayName()</option>
                <option value="@Role.Admin">@Role.Admin.GetDisplayName()</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.Address" class="col-form-label"></label>
            <textarea type="text" class="form-control" asp-for="@Model.Address"></textarea>
        </div>
    </div>
</form>

<style>
    label {
        color: black;
    }
</style>